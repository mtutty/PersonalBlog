@model PersonalBlog.Models.BlogPost
@{
    ViewBag.Title = "Delete";
}
<div class="post span-12">
    <div class="post-meta col span-2">
        <span>Delete</span>
        <ul>
            <li><a href="javascript:$('form').submit();" title="Confirm Delete">Confirm</a>
            </li>
            <li>
                @Html.ActionLink("Back to List", "Index")
            </li>
        </ul>
    </div>
    <div class="post-content last span-9 nudge-2">
        <h2 style="margin-bottom: .5em;">
            Confirm Delete</h2>
        <p>Are you sure you want to delete this posting?  Click Confirm at left to continue.</p>
        <fieldset>
            <legend>BlogPost</legend>
            <div class="display-label">
                Title</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Title)
            </div>
            <div class="display-label">
                Publish Status</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.PublishStatus)
            </div>
            <div class="display-label">
                Rewrite ID</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.RewriteID)
            </div>
            <div class="display-label">
                Author</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Author)
            </div>
            <div class="display-label">
                Content Type</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.ContentType)
            </div>
            <div class="display-label">
                Content</div>
            <div class="display-field">
                @Html.Raw(Model.Content)
            </div>
            <div class="display-label">
                CreateDate</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.CreateDate)
            </div>
            <div class="display-label">
                ViewCount</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.ViewCount)
            </div>
        </fieldset>
    </div>
</div>
@using (Html.BeginForm()) {
}
