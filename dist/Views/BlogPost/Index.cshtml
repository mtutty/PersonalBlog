@using PersonalBlog.Models

<div class="post span-12">
    <div class="post-meta col span-2">
        <form id="statusfilterform" action="@Url.Action("Index")" method="post">
        <ul>
            <li><b>Status:</b>
                @Html.DropDownList("status")
            </li>
            <li>
                @Html.ActionLink("New Post", "Create")
            </li>
        </ul>
        </form>
    </div>
    <div class="post-content last span-9 nudge-2">
        <table class="listing">
            <tr>
                <th>Title</th>
                <th>
                    Publish Status
                </th>
                <th>
                    RewriteID
                </th>
                <th>
                    Author
                </th>
                <th>
                    Create Date
                </th>
                <th>
                    View Count
                </th>
            </tr>
            @if (ViewBag.Postings.Count == 0) {
                <tr>
                    <td colspan="6">
                        <em>There are no items to show here.</em>
                    </td>
                </tr>
            }
            @foreach (var item in ViewBag.Postings as IEnumerable<BlogPost>) {
                <tr>
                    <td colspan="5">
                        <strong>
                        @Html.DisplayFor(modelItem => item.Title)
                        </strong>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublishStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RewriteID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ViewCount)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<script type="text/javascript" defer="defer">
    $("#status").change(function () {
        $("#statusfilterform").submit();
    });
</script>